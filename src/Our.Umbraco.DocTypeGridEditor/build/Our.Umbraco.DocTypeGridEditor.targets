<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <OurUmbracoDocTypeGridEditorContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\DocTypeGridEditor\**\*.*</OurUmbracoDocTypeGridEditorContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyOurUmbracoDocTypeGridEditorAssets" BeforeTargets="Build">
        <ItemGroup>
            <OurUmbracoDocTypeGridEditorContentFiles Include="$(OurUmbracoDocTypeGridEditorContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Our.Umbraco.DocTypeGridEditor files: $(OurUmbracoDocTypeGridEditorContentFilesPath) - #@(OurUmbracoDocTypeGridEditorContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(OurUmbracoDocTypeGridEditorContentFiles)"
            DestinationFiles="@(OurUmbracoDocTypeGridEditorContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\DocTypeGridEditor\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearOurUmbracoDocTypeGridEditorAssets" BeforeTargets="Clean">
        <ItemGroup>
            <OurUmbracoDocTypeGridEditorDir Include="$(MSBuildProjectDirectory)\App_Plugins\DocTypeGridEditor\" />
        </ItemGroup>
        <Message Text="Clear old Our.Umbraco.DocTypeGridEditor data"  Importance="high" />
        <RemoveDir Directories="@(OurUmbracoDocTypeGridEditorDir)"  />
    </Target>

</Project>
